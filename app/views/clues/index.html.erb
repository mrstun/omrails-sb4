<p id="notice"><%= notice %></p>
<link href="https://fonts.googleapis.com/css?family=Mirza|Space+Mono" rel="stylesheet">
<% if user_signed_in? %>
  <h1 style="font-family: 'Space Mono', monospace; text-align: center; background-color: #DCDCDC"">Clues</h1>

  <table>
    <thead>
      <tr>
        <span style="font-family: 'Mirza', cursive;">
        <th>User</th>
        <th>Content</th></span>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
        <% @clues.each do |clue| %>
          <tr>
            <td><%= clue.user %></td>
            <td><%= clue.content %></td>
            <td><%= link_to 'Show', clue %></td>
            <% if clue.user == current_user %>
              <td><%= link_to 'Edit', edit_clue_path(clue) %></td>
              <td><%= link_to 'Destroy', clue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        <% end %>
        <% else %>
        <p style="font-size: 3em;"> There's nothing for your to see here.</p>
        <% end %>
    </tbody>
  </table>

  <br>
  <% if user_signed_in? %>
    <p><%= link_to 'New Clue', new_clue_path %></p>
    <p style="text-align: center;"><img src="http://i.giphy.com/MGaacoiAlAti0.gif" height="300" width="400"></p>
  <% else %>
    <p style="text-align: center;"><img src="http://i0.kym-cdn.com/photos/images/newsfeed/001/023/007/f29.png" rel="nofollow"></p>
    <p style="text-align: center;">Page only here to show that work was done. You must be signed in to view app.</p>
<% end %>